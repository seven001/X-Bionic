<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShoppingActivity" >
    <FrameLayout
        android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <RelativeLayout
	            android:layout_width="match_parent"
		        android:layout_height="wrap_content">
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="53dp"
		        android:background="@drawable/topnav">
		        
		        <Button
		            android:id="@+id/but_shop_back"
		            android:layout_width="53dp"
		            android:focusable="true" 
		            android:focusableInTouchMode="true"
		            android:layout_height="match_parent"
		            android:layout_alignParentLeft="true"
		            android:background="@drawable/but_back"/>
		        
		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:text="我的购物车"
		            android:textSize="22dp"
		            android:textColor="#d7d7d7" />
		
		        <Button
		            android:id="@+id/but_editor"
		            android:layout_width="53dp"
		            android:layout_height="match_parent"
		            android:layout_alignParentRight="true"
		            android:background="@drawable/but_pen" />
		
		    </RelativeLayout>
		
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="72dp"
		        android:layout_marginTop="53dp"
		        android:background="@drawable/tmall_bg_furley"
		        android:orientation="horizontal" >
		
		        <EditText
		            android:id="@+id/ed_search"
		            android:layout_width="match_parent"
		            android:layout_height="32dp"
		            android:layout_marginLeft="16dp"
		            android:layout_marginRight="16dp"
		            android:layout_marginTop="10dp"
		            android:background="@drawable/edit_bg"
		            android:textSize="13dp"
		            android:hint="选填,查找达人手机号码或EMAIL获得8%的抵用券">
		        </EditText>
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignLeft="@+id/ed_search"
		            android:layout_below="@+id/ed_search"
		            android:layout_marginTop="6dp"
		            android:text="@string/text_for_shop"
		            android:textColor="#F65E13" />
		
		        <ImageView
		            android:id="@+id/shop_for_search"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="16dp"
		            android:layout_marginTop="6dp"
		            android:background="@drawable/btn_search" />
		    </RelativeLayout>
		   </RelativeLayout>
		   <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="@drawable/allbackground">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:orientation="vertical">
				    <ListView
				        android:id="@+id/lv_shop"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent" 
				        android:layout_weight="6"/>
				    
			        <RelativeLayout
				        android:layout_width="match_parent"
				        android:layout_height="56dp"
				        android:layout_weight="1"
				        android:background="@drawable/topnav"
				        android:orientation="horizontal" >
				
				        <TextView
				            android:id="@+id/tv_count1"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginTop="6dp"
				            android:layout_marginLeft="6dp"
				            android:text="邮寄费：￥0.0"
				            android:textColor="#ffffff" />
				
				        <Button
				            android:id="@+id/but_acount"
				            android:layout_width="77dp"
				            android:layout_height="35dp"
				            android:layout_alignParentRight="true"
				            android:layout_marginRight="9dp"
				            android:layout_marginTop="6dp"
				            android:text="结算"
				            android:textColor="#ffffff"
				            android:background="@drawable/but_account" />

				        <TextView
				            android:id="@+id/tv_count2"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignBaseline="@+id/tv_count1"
				            android:layout_alignBottom="@+id/tv_count1"
				            android:layout_toRightOf="@+id/tv_count1"
				            android:layout_marginLeft="8dp"
				            android:text="商品金额总计："
				            android:textColor="#ffffff" />

				        <TextView
				            android:id="@+id/tv_count"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignBaseline="@+id/tv_count2"
				            android:layout_alignBottom="@+id/tv_count2"
				            android:layout_toRightOf="@+id/tv_count2"
				            android:text="￥0.0"
				            android:textColor="#D9450E" />

				    </RelativeLayout>
			    </LinearLayout>

	      </FrameLayout>
	    </LinearLayout>
     </FrameLayout>

</LinearLayout>
