<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/peoplebackground"
    tools:context=".LoginActivity" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/topnav">
        <Button
            android:id="@+id/but_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/but_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登陆"
            android:textColor="#d7d7d7"
            android:textSize="22dp" />

    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="36dp"
	        android:gravity="center"
	        android:text="无线增值服务应用，欢迎你！"
	        android:textColor="#cfcfcf"
	        android:textSize="20sp" />
        
    </LinearLayout>    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.4">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

         <EditText
             android:id="@+id/user_login"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginTop="39dp"
             android:background="@drawable/enterbound"
             android:ems="10"
             android:gravity="center"
             android:hint="用户名"
             android:textColor="#ffffff" />

         <EditText
             android:id="@+id/password_login"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginTop="16dp"
             android:layout_below="@+id/user_login"
             android:background="@drawable/enterbound"
             android:ems="10"
             android:gravity="center"
             android:hint="请输入密码"
             android:textColor="#ffffff" 
             android:inputType="textPassword" />

         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:background="@drawable/personpicture"
             android:layout_marginTop="40dp"
             android:layout_marginLeft="40dp" />

         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/keypicture"
             android:layout_below="@+id/user_login"
             android:layout_marginTop="19dp"
             android:layout_marginLeft="40dp" />

         <Button
             android:id="@+id/but_enter"
             android:layout_width="match_parent"
             android:layout_height="46dp"
             android:layout_marginTop="29dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_below="@+id/password_login"
             android:background="@drawable/btn_enter" />

         <Button
             android:id="@+id/but_forgetpw"
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:background="@drawable/forget_password"
             android:layout_below="@+id/but_enter"
             android:layout_marginLeft="25dp"
             android:layout_marginTop="19dp"/>
        
    </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>